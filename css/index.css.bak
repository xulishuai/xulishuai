/* CSS Document */

.clear{
	clear:both;	
	margin:0;
	padding:0;
	width:0;
	height:0;
}
.recommended{
	width:980px;
	height:240px;
	margin-bottom:10px;
	overflow:hidden;
}
/*carousel*/
.carousel{
	width:260px;
	height:240px;
	float:left;	
}
.carousel ol{
	position:absolute; 
	width: 80px;
	height: 20px;
	top:220px;
	left:170px;
	}
.carousel ol li{
	float:left; 
	width: 10px;
	height: 10px;
	margin: 5px; 
	background: #fff;
	}
.carousel ol li.seleted{
	background: #1AA4CA;
	}

/*渐隐*/
.luara-{
	position:absolute;
	padding:0;
	overflow: hidden;

	}
.luara- ul{
	padding: inherit;
	margin: 0;
	}
.luara- ul li{
	float:left;
	display: none;
	padding: inherit;
	margin: inherit;
	list-style: none;
	}
.luara- ul li:first-child{
	display:block;
	}
.luara- ul li img{
	width:260px;
	height: 240px;
	}
	
/*每日看点*/	
.watch{
	clear:both;
	width:460px;
	height:240px;
	float:left;
	margin:0 10px;
	position:relative;
	left:260px;
	background-color:#fff;	
}
.watch p span{font-size:22px;color:#c39;}

.watch ul{
	clear:both;
	width:230px;
	height:198px;
	padding-top:10px;
}
.watch ul li{
	width:200px;
	height:22px;
	padding:5px 15px;
}

.watch ul li a{color:#666;}
.watch ul li a:hover{color:#c39;}

.watch_left{
	float:left;	
}
.watch_right{
	clear:both;
	float:right;
	position:absolute;
	left:230px;	
}
/*排行*/
.ranking{
	clear:both;
	float:right;
	width:240px;
	height:240px;
	position:relative;
	top:-240px;
	overflow:hidden;
	
}
.ranking p{background:#fff;border-radius:5px;}

.ranking ul{
	width:100%
	height:208px;
	font-size:12px;	
	background:#fff;
	padding-bottom:2px;
	
}
.ranking ul li{
	width:100%;
	background:url("../images/bg-1.png")no-repeat 2px center;
	padding:3px 0;}

.ranking ul li a{margin-left:20px;font-size:15px;}

/*列表*/
.main_left{
	width:740px;

	float:left;
	margin-bottom:10px;
}
.menu{
	width:100%;margin-top:10px;
}
.menu_t{
	width:730px;
	height:20px;
	border-left:5px solid #de3fa1;
	line-height:20px;
}
.menu_t p{
	width:730px;
	padding-left:12px;
	color:#666;
	font-size:20px;
	line-height:20px;
}
.menu_t p span{font-size:18px;}
.menu_t p a{
	margin-right:25px;
	float:right;
	font-size:14px;
	font-weight:0;
	color:#666;
}
.menu_t p a:hover{color:#c39;text-decoration:none;}

.menu ul{
	width:100%;
	margin-top:10px;
}
.menu ul li{
	display:block;
	float:left;
	width:175px;
	height:310px;
	margin-bottom:10px;
	margin-right:10px;
	background-color:#FFF;	
}
.menu ul li img{
	width:165px;
	height:240px;
	margin:5px 5px 10px 5px;	
}
.menu ul li img:hover{filter:alpha(Opacity=100);-moz-opacity:1;opacity:0.4;} 
.menu ul li p{
	width:165px;
	font-size:13px;
	margin:0 7px 5px;
}

.menu ul li p a{color:#666;font-size:15px;}

.menu ul li p a:hover{color:#c39;text-decoration:underline;}
.menu ul li span{
	width:165px;
	margin-left:7px;
	margin-bottom:5px;
	font-size:10px;
	color:#c39;	
}

.main_right{
	width:240px;
	float:right;
}
.ranking_t{
	margin-bottom:20px;
	width:240px;
	height:auto;
	overflow:hidden;
}
.ranking_t p{
	width:240px;
	height:32px;
	border-bottom:1px solid #fff;

}

.ranking_t p.margintop{margin-top:11px;}
.ranking_t p span{
	float:left;
	font-weight:600;
	display:block;
	width:70px;
	height:32px;
	border-bottom:2px solid #EF4C79;color:#757878;
}
.ranking_t ul{
	padding-left:3px;
	padding-top:10px;	
	background:#fff;
}
.ranking_t ul li{
	padding-bottom:6px;
	line-height:25px;
	
}

.ranking_t ul li em{float:left;
    width:16px;
    height:16px;
    display:block;
    line-height:16px;
    text-align:center;
    font-style:normal;
    font-family:"Microsoft Yahei";
    color:#FFF;
    background:#888686; 
    margin-top:6px;
    margin-right:7px;
	border-radius:3px;
}

.ranking_t ul li span{color:#EF4C79;}

.ranking_t ul li em.e1{background:#EF4C79;}

.ranking_t ul li a{color:#666;font-size:14px;}
.ranking_t ul li a:hover{color:#EF4C79;}

#go_top{position:fixed;right:410px;bottom:200px;
background:url("../images/top.png") no-repeat left 2px;
display:block;width:50px;height:50px;}
#go_top a{display:block;width:50px;height:50px;}
#go_top a:hover{background:url("../images/top.png") no-repeat left -50px;}



